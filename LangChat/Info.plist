<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict>
			<key>UIWindowSceneSessionRoleApplication</key>
			<array>
				<dict>
					<key>UISceneConfigurationName</key>
					<string>Default Configuration</string>
					<key>UISceneDelegateClassName</key>
					<string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
					<key>UISceneStoryboardFile</key>
					<string>Main</string>
				</dict>
			</array>
		</dict>
	</dict>
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>
	<!-- Privacy Permission Strings (Required for App Store) -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>LangChat needs access to your photo library so you can choose a profile picture and share photos with your language learning partners.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>LangChat needs permission to save photos to your library.</string>
	<key>NSCameraUsageDescription</key>
	<string>LangChat needs camera access so you can take profile photos and share moments with your language partners.</string>
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>LangChat uses your location to show your hometown on your profile and help you find nearby language learning partners.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>LangChat needs microphone access for voice messages and pronunciation practice with your language partners.</string>
	<key>NSContactsUsageDescription</key>
	<string>LangChat would like to access your contacts to help you find friends who also use the app.</string>

	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Disable arbitrary loads for security - only allow specific domains -->
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>picsum.photos</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
			<key>ui-avatars.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
		</dict>
	</dict>
	<!-- API Configuration (values from Secrets.xcconfig) -->
	<key>SUPABASE_URL</key>
	<string>$(SUPABASE_URL)</string>
	<key>SUPABASE_ANON_KEY</key>
	<string>$(SUPABASE_ANON_KEY)</string>
	<key>OPENROUTER_API_KEY</key>
	<string>$(OPENROUTER_API_KEY)</string>
	<key>REVENUECAT_API_KEY</key>
	<string>$(REVENUECAT_API_KEY)</string>
	<key>GOOGLE_CLOUD_API_KEY</key>
	<string>$(GOOGLE_CLOUD_API_KEY)</string>
</dict>
</plist>
